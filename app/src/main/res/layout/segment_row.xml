<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_segment_start"
        android:text="Start"
        android:textSize="16dp"
        android:fontFamily="sans-serif-smallcaps"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"

        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_segment_end"
        android:text="End"
        android:textSize="16dp"
        android:fontFamily="sans-serif-smallcaps"
        android:paddingRight="30dp"
        app:layout_constraintRight_toLeftOf="@+id/btn_segment_delete"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_segment_start"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_segment_delete"
        android:text="del"
        android:src="@drawable/wastebasketgrey20x29"
        android:minHeight="21dp"
        android:minWidth="29dp"
        android:padding="10dp"
        app:layout_constraintBaseline_toBaselineOf="@id/btn_segment_done"

        app:layout_constraintRight_toLeftOf="@id/btn_segment_done"
        />

    <ImageButton
        android:minHeight="21dp"
        android:minWidth="29dp"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_segment_done"
        android:src="@drawable/checkmark20x21"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/btn_segment_delete"
        app:layout_constraintRight_toRightOf="parent"
        />

</android.support.constraint.ConstraintLayout>